<% provide(:title ,t("users.new.signup")) %>
<h1><%= t"users.new.signup" %></h1>
<div class="row">
  <div class="row-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t"users.new.create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
