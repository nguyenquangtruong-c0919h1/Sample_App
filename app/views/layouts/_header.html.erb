<header class="navbar navbar-fixed-top
navbar-inverse">
<div class="container">
  <%= link_to "sample app", "#", id: "logo" %>
  <nav>
   <ul class="nav navbar-nav navbar-right">
    <%= link_to t("en"), locale: :en %>
    <%= link_to t("vi"), locale: :vi %>
    <li><%= link_to t(".title"), root_url %></li>
    <li><%= link_to t(".help"), "#" %></li>
    <li><%= link_to t(".about"), "#" %></li>
    <% if logged_in? %>
    <li><%= link_to t(".user"), users_path %></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= t(".account") %><b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t(".profile"), current_user %></li>
        <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
        <li class="divider"></li>
        <li>
          <%= link_to t(".log_out"), logout_path, method: :delete %>
        </li>
      </ul>
    </li>
    <% else %>
    <li><%= link_to t(".log_in"), login_path %></li>
    <% end %>
  </ul>
</nav>
</div>
</header>
